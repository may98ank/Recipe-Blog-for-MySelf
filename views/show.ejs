<% include partials/header %>

        <div class="ui main text container segment">
            <div class="ui huge header">
                <%= blog.title %>
            </div>
            <div class="meta mydate">
    	        <span><%= blog.created.toDateString() %></span>
            </div>
            <div class="ui top attached">
                <div class="item">
                    <img class="ui centered rounded image" src="<%= blog.image %>">
                        <div class="content">
                	    <div class="description">
                	       <p><%- blog.body %></p>
                	    </div>
	                </div>
                </div>
            </div>
            <div class="">
                <a href="/blogs/<%= blog._id %>/edit" class="ui huge button yellow">Edit</a>
                <form style="display: inline" method="POST" action="/blogs/<%=blog._id%>?_method=DELETE">
                    <button class="ui red basic button" type="submit">Delete Blog</button>
                </form>
            </div>
        </div>

<% include partials/footer %>