<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>" placeholder="Title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Description</label>
            <textarea type="text" name="blog[body]"><%= blog.body %></textarea>
        </div>
        <button class="ui blue button" type="submit">Update</button>
    </form>
</div>

<% include partials/footer %>